<div class="container">
  <div class="row">
    <div class="page-header col-md-10 col-md-offset-1">
      {{!--<div class="">--}}
        <h1>EAT-A-BURGER <small>create your dream burger and devoure it</small></h1>
      {{!--</div>--}}
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2 style="text-align:center">Burgers ready for devouring.</h2>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">DEVOUR</button>
              </form>

              {{> burgers/delete-burger}}
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>


    
    <div class="col-md-6">
      <h2 style="text-align:center">Burgers already devoured</h2>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devour" value="false">
                {{!--<button type="submit">Eat another one!</button>--}}
              </form>

              {{> burgers/delete-burger}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>  
  </div>  
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Add a Burger</h2>
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>